{% extends 'layout.html.twig' %}

{% block content %}
    <div class="col-6 offset-3">
        <h1 class="bg-light text-center">Quizz</h1>
    </div>
    <div class="container-fluid d-flex justify-content-around align-items-center">
        <div>
            <img src="{{ cocktail.image }}" class="img" alt="cocktail">
            <h3 class="text-center mt-2">{{ cocktail.name }}</h3>
        </div>
        <div>
            <div>
            <h2 class="text-center">{{ questions.question }}</h2>
            </div>
            <div class="text-center mt-5 choice">
                <p ><button class="btn btn-secondary fixed-size float-center">{{ questions.reponse1 }}</button></p>
            </div>
            <div class="text-center mt-5 choice">
                <p><button class="btn btn-secondary fixed-size float-center">{{ questions.reponse2 }}</button></p>
            </div>
            <div class="text-center mt-5 choice">
                <p><button class="btn btn-secondary fixed-size float-center ">{{ questions.reponse3 }}</button></p>
            </div>
        </div>
        <div>
            <div class="container bg-white hidden" id="recipe">
                <h4 class="text-center">Ingredients</h4>
                <div class="card-body d-flex justify-content-center">
                    <ul>
                        {% for ingredient in cocktail.ingredients %}
                            {% if ingredient != null %}
                                <li>{{ ingredient }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                    <ul>
                        {% for measure in cocktail.measures %}
                            {% if measure != null %}
                                <li class="no-transform">{{ measure }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
                <div class="text-center">
                    <h4>Instructions</h4>
                    <p>{{ cocktail.instruction }}</p>
                </div>
                <div class="text-center">
                    <a href="/quizz/play/{{ questions.title }}/{{ questions.order + 1 }}"><button class="btn btn-secondary">suivant</button></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
<script> document.body.style.backgroundImage= "url('{{ background }}')";</script>
<script>
    let recipe = document.getElementById('recipe');
    let selectors = document.getElementsByClassName('choice');
    for (let i = 0; i< selectors.length; i++){
        selectors[i].addEventListener('click', (e)=>{
            recipe.classList.toggle('hidden');
        })
    }
</script>
{% endblock %}
