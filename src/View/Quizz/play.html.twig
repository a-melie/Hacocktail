{% extends 'layout.html.twig' %}

{% block content %}
    <div class="col-6 offset-3">
        <h1 class="bg-light text-center">Quizz</h1>
    </div>
    <div class="container d-flex justify-content-between">
        <div>
            <div>
            <h2 class="text-center">{{ questions.question }}</h2>
            </div>
            <div class="text-center mt-5">
                <a href=""><button class="btn btn-primary float-center">{{ questions.reponse1 }}</button></a>
            </div>
            <div class="text-center mt-5">
                <a href=""><button class="btn btn-primary float-center">{{ questions.reponse2 }}</button></a>
            </div>
            <div class="text-center mt-5">
                <a href=""><button class="btn btn-primary float-center">{{ questions.reponse3 }}</button></a>
            </div>
        </div>
        <div>
            <div class="container size">
                <img src="{{ cocktail.image }}" class="img" alt="cocktail">
                <h3 class="text-center mt-2">{{ cocktail.name }}</h3>
                <div class="card-body d-flex justify-content-center">
                    <ul>
                        {% for ingredient in cocktail.ingredients %}
                            {% if ingredient != null %}
                                <li>{{ ingredient }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                    <ul>
                        {% for measure in cocktail.measures %}
                            {% if measure != null %}
                                <li class="no-transform">{{ measure }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
                <div class="text-center">
                    <h4>Instructions</h4>
                    <p>{{ cocktail.instruction }}</p>
                </div>
                <a href="/quizz/play/{{ questions.title }}/{{ questions.order + 1 }}"><button class="btn btn-primary">suivant</button></a>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
<script> document.body.style.backgroundImage= "url('{{ background }}')";</script>
{% endblock %}
